@model IEnumerable<PlayerBase_3.Models.Player>

@{
    ViewData["Title"] = "Players";
}

<h1>Players</h1>

<p>
    @using (Html.BeginForm("Index", "Players", FormMethod.Get))
    {
        <b>Search:</b> @Html.RadioButton("SearchBy", "Name", true) <text> Name </text>
        @Html.RadioButton("SearchBy", "City")<text> City </text>
        @Html.RadioButton("SearchBy", "Province") <text> Province </text>
        @Html.RadioButton("SearchBy", "Position") <text> Position </text><br />
        @Html.TextBox("search") <input type="submit" value="Search" />
    }
</p>

<table class="table table-hover text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GamesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assists)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PenaltyMinutes)
            </th>
        </tr>
    </thead>
    <tbody>
@if (Model.Count() == 0)
{
    <tr class="text-center">
        <td colspan="11">No players match search criteria.</td>
    </tr>
}
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</a>
            </td>
            <td>
                @item.BirthDate.Value.ToString("MM/dd/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GamesPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assists)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PenaltyMinutes)
            </td>
        </tr>
}
    </tbody>
</table>